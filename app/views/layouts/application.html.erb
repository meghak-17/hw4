<!DOCTYPE html>
<html>
<head>
  <title>Tacostagram Final</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <link rel="stylesheet" href="/stylesheets/application.css">
</head>

<body>
  <!-- Bootstrap Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Tacostagram</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <% if session[:user_id] %>
            <li class="nav-item">
              <a class="nav-link" href="/authentication/destroy">Logout</a>
            </li>
          <% else %>
            <li class="nav-item">
              <a class="nav-link" href="/authentication/new">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users/new">Signup</a>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Flash Messages -->
  <div class="container mt-3">
    <% if flash["notice"] %>
      <div class="alert alert-success"><%= flash["notice"] %></div>
    <% end %>
  </div>

  <!-- Main Content -->
  <div class="container my-4">
    <%= yield %>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

