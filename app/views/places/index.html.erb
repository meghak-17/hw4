<h1 class="text-center my-4">Places</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg p-4">
        <div class="card-body">
          <ul class="list-group">
            <% for place in @places %>
              <li class="list-group-item">
                <a href="/places/<%= place["id"] %>" class="text-decoration-none fw-bold">
                  <%= place["name"] %>
                </a>
              </li>
            <% end %>
          </ul>
        </div>
      </div>

      <!-- New Place Button -->
      <div class="text-center mt-3">
        <a href="/places/new" class="btn btn-primary">Add a New Place</a>
      </div>
    </div>
  </div>
</div>
