<div class="container mt-4">
  <!-- Place Name -->
  <h1 class="text-center mb-4"><%= @place["name"] %></h1>

  <!-- Entries Section -->
  <h2 class="mb-3">My Entries</h2>

  <% if @entries.any? %>
    <div class="row">
      <% for entry in @entries %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm">
            <div class="card-body">
              <h3 class="card-title fw-bold"><%= entry["title"] %></h3>
              <h4 class="text-muted"><%= entry["occurred_on"] %></h4>
              <p class="card-text"><%= entry["description"] %></p>

              <% if entry.image.attached? %>
                <img src="<%= url_for(entry.image) %>" class="img-fluid rounded mt-2" alt="Entry Image" width="100%">
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">No entries yet. Be the first to add one!</p>
  <% end %>

  <!-- New Entry & Back Button -->
  <div class="mt-4">
    <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Entry</a>
    <a href="/places" class="btn btn-secondary">Back to All Places</a>
  </div>
</div>
