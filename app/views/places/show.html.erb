<div class="container mt-4">
  <!-- Place Name -->
  <h1 class="mb-3"><%= @place["name"] %></h1>

  <!-- New Entry Button (Moved Up & Styled) -->
  <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-lg btn-info text-white mb-4">âž• Add a New Entry</a>

  <!-- Entries Section -->
  <h2 class="mb-3">My Entries</h2>

  <% if @entries.any? %>
    <div class="row">
      <% for entry in @entries %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm">
            <div class="card-body">
              <h2 class="card-title fw-bold"><%= entry["title"] %></h2>
              <h5 class="text-muted"><%= entry["occurred_on"] %></h5>
              <p class="card-text"><%= entry["description"] %></p>

              <% if entry.image.attached? %>
                <img src="<%= url_for(entry.image) %>" class="img-fluid rounded mt-2" alt="Entry Image" width="100%">
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">No entries yet. Be the first to add one!</p>
  <% end %>

  <!-- Back Button -->
  <div class="mt-4">
    <a href="/places" class="btn btn-secondary">Back to All Places</a>
  </div>
</div>
