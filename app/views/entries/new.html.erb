<h1 class="text-center my-4">New Entry</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg p-4">
        <div class="card-body">
          <form action="/entries" method="post" enctype="multipart/form-data">
            <input type="hidden" name="place_id" value="<%= params["place_id"] %>">

            <div class="mb-3">
              <label for="title_input" class="form-label fw-bold">Title</label>
              <input type="text" name="title" id="title_input" class="form-control" required>
            </div>

            <div class="mb-3">
              <label for="description_input" class="form-label fw-bold">Description</label>
              <textarea name="description" id="description_input" class="form-control" rows="4" required></textarea>
            </div>

            <div class="mb-3">
              <label for="occurred_on_input" class="form-label fw-bold">Occurred On</label>
              <input type="date" name="occurred_on" id="occurred_on_input" class="form-control" required>
            </div>

            <div class="mb-3">
              <label for="image_input" class="form-label fw-bold">Image (optional)</label>
              <input type="file" name="image" id="image_input" class="form-control">
            </div>

            <div class="d-grid">
              <button class="btn btn-primary">Save Entry</button>
            </div>
          </form>
        </div>
      </div>

      <!-- Back Button -->
      <div class="text-center mt-3">
        <a href="/places" class="btn btn-secondary">Back to Places</a>
      </div>
    </div>
  </div>
</div>
